# Configuration file used by ocamlformat
#  - See `ocamlformat --help` for more options
#  - Run `ocamlformat --print-config` to show the current configuration

# profile = ocamlformat
# profile = conventional
# profile = default
# profile = compact
profile = janestreet
version = 0.19.0

# # Generals
margin = 79
ocp-indent-compat=true
break-before-in = auto

break-sequences = false
break-string-literals = never
single-case = compact
break-separators = after
# break-infix = wrap

# # Documentation and comments
# parse-docstrings = true
wrap-comments = false
# doc-comments-padding = 2
comment-check = false

# # Pattern matching
# cases-exp-indent = 0
