# Configuration file used by ocamlformat
#  - See `ocamlformat --help` for more options
#  - Run `ocamlformat --print-config` to show the current configuration

# profile = ocamlformat
# profile = conventional
# profile = default
# profile = compact
profile = janestreet
# version = 0.19.0

# Generals
margin = 79
ocp-indent-compat=true
break-before-in = auto

break-sequences = false
break-string-literals = never
single-case = compact
break-separators = after

# Documentation and comments
wrap-comments = false
comment-check = false
sequence-blank-line = preserve-one                     # allow blank lines
exp-grouping = preserve

# Use wrap infix to avoid breaking string concatenation (^) into many lines
break-infix = wrap
wrap-fun-args = true
break-fun-sig = wrap
type-decl = sparse